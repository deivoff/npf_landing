.n-card
  border-radius 6px
  box-shadow 0px 20px 81px 0 rgba(0, 0, 0, 0.15)
  background-color #fff
  padding 40px
  box-sizing border-box
  min-height calc(100% - 80px)
  flex-shrink 1

  &__title
    font-size 32px
    font-weight 300
    line-height 1.25
    color #3d4348
    margin-top 40px
    +below('md')
      font-size 24px
      line-height 1.33
      margin-top 24px


  &__text
    margin-top 24px
    font-size 16px
    line-height 1.38
    letter-spacing 0.3px
    color #000