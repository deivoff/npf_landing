.n-nav
  position fixed
  min-height 100vh
  background-color white
  z-index 99
  top 0
  left 0
  padding 15px 135px
  transition-duration: .5s
  transition-property transform 
  +below('md')
    min-height 0
    width 100vw
    padding 22px 30px 33px


  &:not(.active)
    transform: translateX(-110%)
    +below('md')
      transform: translateY(-110%)

  &:before
    content attr(title)
    font-size 32px
    font-weight 300
    line-height 1.75
    color #3d4348
    +below('md')
      padding-left 34px
      font-size 18px
      font-weight 300

  &__list
    margin 0
    list-style-type none
    padding 88px 0 0
    +below('md')
      padding-top 62px

  &__elem
    font-size 24px
    color #1a991a
    padding-bottom 37px
    &:last-child
      padding-bottom 0
  
  &__link
    font-size inherit 
    color inherit
    text-decoration none

  &__phone
    .n-block_phone
      padding-top 39px
      display none
      +below('md')
        display block